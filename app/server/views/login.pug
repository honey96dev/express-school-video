						.form-group
							.col-xs-offset-3.col-md-2
								input.btn.btn-primary(name='Submit' type='submit' value='Sign In')
							#create-account.col-md-2
								a.btn.btn-success(href='/signup') Sign Up
							#forgot-password.col-md-2
								a(href='#') reset password

