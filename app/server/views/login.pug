
extends layout
block content
	.container
		.row
			.col-md-8
				section#login
					h1.entry-title
						span Sign In
					hr
					form#signin.form-horizontal(method='post')
						.form-group
							label.control-label.col-sm-3
								| Email ID
								span.text-danger *
							.col-md-6.col-sm-9
								.input-group
									span.input-group-addon
										i.glyphicon.glyphicon-envelope
									input.form-control(type='email' id='email-tf' name='email' placeholder='Enter your Email ID' value='')
								//small
								//	| Your Email Id is being used for ensuring the security of your account, authorization
								//	| and access recovery.
						.form-group
							label.control-label.col-sm-3
								| Password
								span.text-danger *
							.col-md-6.col-sm-8
								.input-group
									span.input-group-addon
										i.glyphicon.glyphicon-lock
									input.form-control(type='password' id='pass-tf' name='pass' placeholder='Choose password (5-15 chars)' value='')
